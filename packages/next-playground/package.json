{
  "name": "next-playground",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "yarn build:client && yarn build:api && yarn tsc",
    "build:client": "tsup src/index.ts --format cjs,esm",
    "build:api": "tsup src/api.ts --format cjs,esm",
    "tsc": "tsc -p tsconfig.build.json && node dtsBundle.js",
    "preview": "vite preview",
    "prepare": "yarn build"
  },
  "dependencies": {
    "leva": "^0.9.34",
    "ts-morph": "^17.0.1",
    "twind": "^0.16.19",
    "zod": "^3.20.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@acme/tailwind-config": "*",
    "react": "^18.2.0",
    "@types/react": "^18.0.26",
    "react-dom": "^18.2.0",
    "@types/react-dom": "^18.0.9",
    "@vitejs/plugin-react": "^3.0.0",
    "tsup": "^6.5.0",
    "dts-bundle": "^0.7.3",
    "next": "^13.0.7",
    "typescript": "^4.9.3",
    "vite": "^4.0.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "next": "^13.0.7"
  },
  "files": [
    "dist",
    "!dist/src"
  ],
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "require": "./dist/index.cjs"
      },
      "./api": {
        "types": "./dist/api.d.ts",
        "import": "./dist/api.js",
        "require": "./dist/api.cjs"
      }
    }
  }
}
